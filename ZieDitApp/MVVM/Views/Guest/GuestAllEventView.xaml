<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ZieDitApp.MVVM.ViewModels"
             x:Class="ZieDitApp.MVVM.Views.Guest.GuestAllEventView"
             Title="GuestAllEventView">
    <ContentPage.BindingContext>
        <local:AllEventsViewModel/>
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <ListView x:Name="EventsListView" ItemsSource="{Binding Events}" SelectedItem="{Binding SelectedEvent}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding name}" Detail="{Binding date}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label Text="{Binding SelectedEvent.Id}"/>
        <Button x:Name="DetailsBtn" Text="Details"/>
    </VerticalStackLayout>
</ContentPage>